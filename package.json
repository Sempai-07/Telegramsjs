{
  "name": "telegramsjs",
  "description": "Telegramsjs is a lightweight Node.js library for creating Telegram bots. It is designed to be a framework and does not rely on third-party libraries such as Telegraf.js or node-telegram-bot-api. This library provides a way to create Telegram bots with ease and flexibility.",
  "version": "2.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/typing/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.mjs"
  },
  "scripts": {
    "build": "rimraf dist/ && yarn commonjs && yarn esm && yarn declaration",
    "commonjs": "tsc --module commonjs --outDir ./dist/cjs/",
    "esm": "tsc --module es2015 --allowJs true --outDir ./dist/esm",
    "declaration": "tsc --declaration --module commonjs --declarationDir ./dist/typing",
    "test": "jest test/",
    "tab-align": "prettier --write src/"
  },
  "license": "MIT",
  "files": [
    "./dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "javascript",
    "typescript",
    "telegram",
    "library",
    "telegramapi",
    "api",
    "bot"
  ],
  "author": "Sempai<zadmanthegreat@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sempai-07/Telegramsjs"
  },
  "bugs": {
    "url": "https://github.com/Sempai-07/telegramsjs/issues"
  },
  "homepage": "https://telegramsjs-dev.surge.sh/",
  "dependencies": {
    "axios": "^1.4.0",
    "is-regex": "^1.1.4",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "@telegram.ts/types": "^1.3.2",
    "@types/is-regex": "^1.0.0",
    "@types/node": "18.16.1"
  }
}
